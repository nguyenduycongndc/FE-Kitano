@{
    Layout = "_Layout";

}
@using RiskAssessment.Resource;

<link rel="stylesheet" type="text/css" href="~/css/systemparam.css?v=1.1">

<div class="row page-titles mx-0" style="padding-bottom: 0px; ">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">@Resource.Home</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">@Resource.SystemParameter</a></li>
        </ol>
    </div>
</div>
<div class="container-fluid">
    <div class="card" id="view">
        <div class="card-header bg-primary text-white" style=" font-size: 1rem; ">
            @Resource.ListSystemParameter
        </div>
        <div class="card-body card-custom">
            <form id="formViewSystemParameter" action="javascript:void(0)">
                <div style="padding: 15px 0px;">
                    <a href="javascript:void(0);" class="btn btn-info" data-toggle="collapse" data-target="#collapseSearch" aria-expanded="true" aria-controls="collapseSearch"><i class="fa fa-search" aria-hidden="true"></i>@Resource.SearchOption</a>
                </div>
                <div class="collapse" id="collapseSearch" style="margin-top:5px">
                    <div class="col-md-12 row">
                        <div class="col-md-6 mb-3">
                            <div class="form-group row">
                                <label class="col-form-label col-lg-2" for="Subsystem">
                                    @Resource.Subsystem
                                </label>
                                <div class="col-lg-10">
                                    <input type="text" class="form-control" id="Subsystem" name="Subsystem" onchange="subsystemChange()">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="form-group row">
                                <label class="col-form-label col-lg-2" for="Parameters">
                                    @Resource.Parameters
                                </label>
                                <div class="col-lg-10">
                                    <input type="text" class="form-control" id="Parameters" name="Parameters" onchange="parametersChange()">
                                </div>
                            </div>
                        </div>
                    </div>
                    @*<div class="col-md-12 mb-2" style="text-align:center; ">
                            <a href="javascript:void(0)" class="btn btn-info" onclick="onSearch()">@Resource.Search</a>
                        </div>*@
                    <div class="col-md-12 mb-3 btn-search-custom">
                        <div style="text-align:center; ">
                            <a href="javascript:void(0)" class="btn btn-info" onclick="onSearch()">@Resource.Search</a>
                        </div>
                    </div>
                </div>
            </form>
            <div class="table-responsive custom-table-scroll ">
                <table id="systemParameterTable" class="table table-striped table-bordered zero-configuration">
                    <thead class="contain-header-custom m-gray">
                        <tr>
                            <th class="number1" style="text-align:center">STT</th>
                            <th class="number2" style="text-align: center">@Resource.Subsystem</th>
                            <th class="number3" style="text-align: center">@Resource.Parameters</th>
                            <th class="number4" style="text-align: center">@Resource.Value</th>
                            <th class="number5" style="text-align: center">@Resource.Note</th>
                            <th class="number6" id="optionSystemParam" style="text-align: center">@Resource.Option</th>
                        </tr>
                    </thead>
                    <tbody class="contain-tbody-custom">
                    </tbody>
                </table>
            </div>
            <div class="row">
                <div class="col-md-7"></div>
                <div class="col-md-5">
                    <partial name="_Pagination" />
                </div>
            </div>
        </div>
    </div>
    <div class="card" id="detail" style="display: none">
        <div class="card-header bg-primary text-white" id="frmHeaderDetail" style=" font-size: 1rem; ">
            @Resource.Detail
        </div>
        <div class="card-body card-custom">
            <form id="formDetail" class="form-valide" action="#" method="post" style="margin-top: 20px;">
                <input type="hidden" id="Id" name="Id" value="0" />
                <div class="row">
                    <div class="col-md-12 row mb-3">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-6">
                            <div class="form-group row">
                                <div class="col-lg-4">
                                    <label for="SubsystemDetail" class="col-form-label">@Resource.Subsystem</label>
                                </div>
                                <div class="col-lg-8">
                                    <input type="text" class="form-control" id="SubsystemDetail" name="SubsystemDetail" disabled>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-6">
                            <div class="form-group row">
                                <div class="col-lg-4">
                                    <label for="ParametersDetail" class="col-form-label">@Resource.Parameters</label>
                                </div>
                                <div class="col-lg-8">
                                    <input type="text" class="form-control" id="ParametersDetail" name="ParametersDetail" disabled>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 row mb-3">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-6" id="detail_encode">
                            <div class="form-group row">
                                <div class="col-lg-4">
                                    <label for="ValueDetailEnCode" class="col-form-label">@Resource.Value</label>
                                </div>
                                <div class="col-lg-8">
                                    <input type="password" class="form-control" id="ValueDetailEnCode" name="ValueDetailEnCode" disabled>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-6" id="detail_value" style="display: none">
                            <div class="form-group row">
                                <div class="col-lg-4">
                                    <label for="ValueDetail" class="col-form-label">@Resource.Value</label>
                                </div>
                                <div class="col-lg-8">
                                    <input type="text" class="form-control" id="ValueDetail" name="ValueDetail" disabled>
                                </div>
                            </div>  
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-6" id="detail_value_CKE">
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-6">
                            <div class="form-group row">
                                <div class="col-lg-4">
                                    <label for="NoteDetail" class="col-form-label">@Resource.Note</label>
                                </div>
                                <div class="col-lg-8">
                                    <input type="text" class="form-control" id="NoteDetail" name="NoteDetail" disabled>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 row " style="display: inline-flex; flex-direction: row; justify-content: end; align-items: flex-start; width: 100%;">
                        <div style="width: 50%; display: inline-flex; flex-direction: row; justify-content: end; align-items: flex-start;">
                            <div style="width: 24%; display: inline-flex; flex-direction: row; justify-content: center; align-items: flex-start; padding: 0 5px 0 5px; ">
                                <button type="button" class="btn btn-outline" style="width:100%" onclick="openViewSystemParameter(0,0,'')">@Resource.Back</button>
                            </div>
                        </div>
                    </div>
                    @*<div class="col-md-12" style="text-align:center">
                            <div style="display: inline-flex; flex-direction: row; justify-content: center; align-items: flex-start;">
                                <button type="button" class="btn btn-outline" onclick="openViewSystemParameter(0,0,'')">@Resource.Back</button>
                            </div>
                        </div>*@
                </div>
            </form>
        </div>
    </div>
    <div class="card" id="edit" style="display: none">
        <div class="card-header bg-primary text-white" id="frmHeaderEdit" style=" font-size: 1rem; ">
            @Resource.Edit
        </div>
        <div class="card-body card-custom">
            <form id="formEdit" class="form-valide" action="#" method="post" style="margin-top: 20px;">
                <input type="hidden" id="IdEdit" name="IdEdit" value="0" />
                <div class="row">
                    <div class="col-md-12 row mb-3">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-6">
                            <div class="form-group row">
                                <div class="col-lg-4">
                                    <label for="SubsystemEdit" class="col-form-label">@Resource.Subsystem</label>
                                </div>
                                <div class="col-lg-8">
                                    <input type="text" class="form-control" id="SubsystemEdit" name="SubsystemEdit" disabled>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-6">
                            <div class="form-group row">
                                <div class="col-lg-4">
                                    <label for="ParametersEdit" class="col-form-label">@Resource.Parameters</label>
                                </div>
                                <div class="col-lg-8">
                                    <input type="text" class="form-control" id="ParametersEdit" name="ParametersEdit" disabled>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 row mb-3">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-6" id="edit_encode">                          
                            <div class="form-group row">
                                <div class="col-lg-4">
                                    <label for="ValueEditEnCode" class="col-form-label">@Resource.Value</label>
                                </div>
                                <div class="col-lg-8">
                                    <input type="password" class="form-control" id="ValueEditEnCode" name="ValueEditEnCode">
                                </div>
                            </div>                            
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-6" id="edit_value" style="display:none">
                            <div class="form-group row">
                                <div class="col-lg-4">
                                    <label for="ValueEdit" class="col-form-label">@Resource.Value</label>
                                </div>
                                <div class="col-lg-8">
                                    <input type="text" class="form-control" id="ValueEdit" name="ValueEdit">
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-6" id="edit_value_CKE">
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-6">
                            <div class="form-group row">
                                <div class="col-lg-4">
                                    <label for="NoteEdit" class="col-form-label">@Resource.Note</label>
                                </div>
                                <div class="col-lg-8">
                                    <input type="text" class="form-control" id="NoteEdit" name="NoteEdit">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12" style="display: inline-flex; flex-direction: row; justify-content: end; align-items: flex-start; width: 100%;">
                        <div style="width: 50%; display: inline-flex; flex-direction: row; justify-content: end; align-items: flex-start;">
                            <div style="width: 24%; display: inline-flex; flex-direction: row; justify-content: center; align-items: flex-start; padding: 0 5px 0 5px; ">
                                <button type="button" class="btn btn-info" style="width:100%" onclick="submitEditSystemParameter();">@Resource.Save</button>
                            </div>
                            <div style="width: 24%; display: inline-flex; flex-direction: row; justify-content: center; align-items: flex-start; padding: 0 5px 0 5px; ">
                                <button type="button" class="btn btn-outline" style="width:100%" onclick="openViewSystemParameter(0,0,'')">@Resource.Back</button>
                            </div>
                        </div>
                    </div>
                    @*<div class="col-md-12" style="text-align:center">
                            <div style="display: inline-flex; flex-direction: row; justify-content: center; align-items: flex-start;">
                                <button type="button" class="btn btn-info" onclick="submitEditSystemParameter();">@Resource.Save</button>
                            </div>&ensp;
                            <div style="display: inline-flex; flex-direction: row; justify-content: center; align-items: flex-start;">
                                <button type="button" class="btn btn-outline" onclick="openViewSystemParameter(0,0,'')">@Resource.Back</button>
                            </div>
                        </div>*@
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/jsApp/common.js" asp-append-version="true"></script>
    <script src="~/js/constant.js" asp-append-version="true"></script>
    <script src="~/js/jsApp/systemparameter.js" type="text/javascript" asp-append-version="true"></script>
    <script type="text/javascript">
                //onSearch();
    </script>
    <script src="~/js/ckeditor/ckeditor.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
}

