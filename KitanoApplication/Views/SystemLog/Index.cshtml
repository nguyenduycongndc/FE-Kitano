@{
    Layout = "_Layout";

}
@using RiskAssessment.Resource;

<link rel="stylesheet" type="text/css" href="~/css/systemlog.css">
<div class="row page-titles mx-0" style="padding-bottom: 0px; ">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">@Resource.Home</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">@Resource.SystemLog</a></li>
        </ol>
    </div>
</div>
<div class="container-fluid">
    <div class="card" id="view">
        <div class="card-header bg-primary text-white" style=" font-size: 1rem; ">
            @Resource.ListSystemLog
        </div>
        <div class="card-body card-custom">
            <form id="formViewSystemLog" action="javascript:void(0)">
                <div style="padding: 15px 0px;">
                    <a href="javascript:void(0);" class="btn btn-info" data-toggle="collapse" data-target="#collapseSearch" aria-expanded="true" aria-controls="collapseSearch"><i class="fa fa-search" aria-hidden="true"></i>@Resource.SearchOption</a>
                </div>
                <div class="collapse" id="collapseSearch" style="margin-top:5px">
                    <div class="col-md-12 row">
                        <div class="col-md-6 mb-3">
                            <div class="form-group row">
                                <label class="col-form-label col-lg-2" for="Name">
                                    @Resource.UserName
                                </label>
                                <div class="col-lg-10">
                                    <input type="text" class="form-control" id="Name" name="Name" onchange="nameChange()">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="form-group row">
                                <label class="col-form-label col-lg-2" for="Module">
                                    @Resource.Module
                                </label>
                                <div class="col-lg-10">
                                    <input type="text" class="form-control" id="Module" name="Module" onchange="moduleChange()">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 row">
                        <div class="col-md-6 mb-3">
                            <div class="form-group row">
                                <label class="col-form-label col-lg-2" for="FromDate">
                                    @Resource.FromDate
                                </label>
                                <div class="col-lg-10">
                                    <input type="date" class="form-control" id="FromDate" name="FromDate" onchange="fromDateChange()">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="form-group row">
                                <label class="col-form-label col-lg-2" for="ToDate">
                                    @Resource.ToDate
                                </label>
                                <div class="col-lg-10">
                                    <input type="date" class="form-control" id="ToDate" name="ToDate" onchange="toDateChange()">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 mb-3 btn-search-custom">
                        <div style="text-align:center; ">
                            <a href="javascript:void(0)" class="btn btn-info" onclick="onSearch()">@Resource.Search</a>
                        </div>
                    </div>
                </div>
            </form>
            <div class="table-responsive custom-table-scroll ">
                <table id="systemLogTable" class="table table-striped table-bordered zero-configuration">
                    <thead class="contain-header-custom m-gray">
                        <tr>
                            <th class="number1" style="text-align:center">STT</th>
                            <th class="number2" style="text-align:center">@Resource.Module</th>
                            <th class="number3" style="text-align:center">@Resource.UserName</th>
                            <th class="number4" style="text-align:center">@Resource.PerformTasks</th>
                            <th class="number5" style="text-align: center">@Resource.ExecutionTime</th>
                        </tr>
                    </thead>
                    <tbody class="contain-tbody-custom">
                    </tbody>
                </table>
            </div>
            <div class="row">
                <div class="col-md-7"></div>
                <div class="col-md-5">
                    <partial name="_Pagination" />
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/jsApp/common.js" asp-append-version="true"></script>
    <script src="~/js/constant.js" asp-append-version="true"></script>
