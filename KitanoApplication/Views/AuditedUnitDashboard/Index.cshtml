@using RiskAssessment.Resource;
@{
    ViewData["Title"] = "Audited Unit Dashboard";
    Layout = "_Layout";
}
<link href="~/js/chart/apexcharts/apexcharts.css" rel="stylesheet" />
<style>
    .apexcharts-legend {
        display: flex !important;
        justify-content: space-evenly !important;
    }

    td, th {
        border-left: none !important;
        border-right: none !important;
        text-align: left
    }

    table {
        border: 1px solid #d5dce5
    }
</style>
<div class="container-fluid">
    <div class="card">
        <div class="card-header bg-primary text-white" style=" font-size: 1rem; ">
            Theo dõi đơn vị được kiểm toán
        </div>
        <div class="card-body card-custom">
            <div id="formsearch" class="col-md-12" style=" flex-direction: row; display: inline-flex; justify-content: space-between; align-items: flex-start; width: 100%; margin-top:10px">
                <div class="col-md-6 mb-3">
                    <div class="form-group row">
                        <label class="col-form-label col-lg-3 required">
                            Đon vị được kiểm toán
                        </label>
                        <div class="col-lg-8">
                            <select class="form-control required" id="facility" name="facility">
                                <option value="">— Chọn —</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <a href="javascript:void(0)" onclick="onSearch()" class="btn btn-info"><i class="fa fa-search" aria-hidden="true"></i>Xem thông tin</a>
                </div>
            </div>

            <div id="report">
                <div class="col-md-12 row">
                    <div class="col-md-6" style="margin-bottom: 20px">
                        <h5>1. Lịch sử đánh giá rủi ro</h5>
                    </div>

                    <div class="col-md-6" style="margin-bottom: 20px">
                        <h5>2. Thống kê số lượng phát hiện kiểm toán</h5>
                    </div>

                    <div class="col-md-5" style="margin-bottom: 20px">
                        <div id="ColumnChart"></div>
                    </div>
                    <div class="col-md-7" style="margin-bottom: 20px">
                        <div id="DonutChart" style=" border: 1px solid #d5dce5;"></div>
                    </div>
                </div>
                <div class="col-md-12 row-custom">
                    <br />
                </div>
                <div class="col-md-12 row-custom" style="margin-bottom:5px">
                    <h5>3. Thống kê các kiến nghị kiểm toán</h5>
                </div>
                <div class="col-md-12 row-custom">
                    <div class="table-responsive custom-table-scroll">
                        <table id="auditrequesttable" class="table table-striped table-bordered dataTable">
                            <caption hidden></caption>
                            <thead class="contain-header-custom m-gray">
                                <tr>
                                    <th class="text-center" scope="col">#</th>
                                    <th scope="col">Mã kiến nghị</th>
                                    <th scope="col">Trạng thái thực hiện kiến nghị</th>
                                    <th scope="col">Trạng thái thời gian</th>
                                    <th scope="col">Người chịu tránh nhiệm</th>
                                    <th scope="col">Thời gian cam kết hoàn thành</th>
                                </tr>
                            </thead>
                            <tbody class="contain-tbody-custom">
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-md-7"></div>
                        <div class="col-md-5">
                            <partial name="_Pagination" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
@section Scripts{
    <script src="~/js/chart/apexcharts/apexcharts.js"></script>
    <script src="~/js/jsApp/common.js" asp-append-version="true"></script>
    <script src="~/js/constant.js" asp-append-version="true"></script>
    <script src="~/js/jsApp/auditedunitdashboard.js" asp-append-version="true"></script>
}
