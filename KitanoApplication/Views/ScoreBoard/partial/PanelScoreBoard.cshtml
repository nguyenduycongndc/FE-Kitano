@using RiskAssessment.Resource;
@using KitanoApplication.DataAccess;
<!-- panelScoreBoard -->
<div id="panelScoreBoard" class="tab-pane active" style="margin-top:5px">
    <div class="card">
        <div class="card-header">
            <h5>@Resource.GeneralInfo</h5>
        </div>
        <div class="card-body">

            <div class="form-row">
                <div class="col-md-6 ">
                    <div class="form-group row">
                        <label for="assessment_object" class="col-md-3 col-form-label">@Resource.AssessmentObject</label>
                        <div class="col-md-9">
                            <input type="text" class="form-control" id="assessment_object" disabled="disabled" />
                        </div>
                    </div>
                </div>
                <div class="col-md-6 ">
                    <div class="form-group row">
                        <label for="assessment_state" class="col-md-3 col-form-label">@Resource.State</label>
                        <div class="col-md-9">
                            <input type="text" class="form-control" id="assessment_state" disabled="disabled" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-row  mt-1">
                <div class="col-md-6 ">
                    <div class="form-group row">
                        <label for="assessment_point" class="col-md-3 col-form-label">@Resource.Point</label>
                        <div class="col-md-9">
                            <input type="number" class="form-control" id="assessment_point" min="0" max="10" step="0.1" onchange="checkNumberValue(this)" disabled="disabled" />
                        </div>
                    </div>
                </div>
                <div class="col-md-6 ">
                    <div class="form-group row">
                        <label for="assessment_risklevel" class="col-md-3 col-form-label">@Resource.RiskScale</label>
                        <div class="col-md-9">
                            <input type="text" class="form-control" id="assessment_risklevel" disabled="disabled" />
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5>
                @Resource.ScoreBoard @Resource.Detail
                @if (Utils.IsCheckPemission("M_SB", "PER_EDIT") == true)
                {
                    <a href="javascript:void(0)" class="btn btn-info" onclick="onReloadIssue()" style="float: right"><i class="fa fa-refresh" aria-hidden="true"></i> @Resource.IssueRefresh</a>
                }
            </h5>
        </div>
        <div class="card-body">
            <div class="table-responsive  custom-table-scroll" style="max-height: 420px; overflow-y: auto">
                <table id="tblRiskScore" class="table table-striped table-bordered zero-configuration">
                    <caption hidden="true">Bảng chấm điểm</caption>
                    <thead class="contain-header-custom m-gray">
                        <tr>
                            <th scope="col" style="width: 50px; text-align: center"></th>
                            <th scope="col" style="width: 150px">@Resource.RiskIssueCode</th>
                            <th scope="col">@Resource.RiskIssueName</th>
                            <th scope="col">N/A</th>
                            <th scope="col" style="width: 150px">@Resource.Proportion (%)</th>
                            <th scope="col" style="width: 150px">@Resource.WayToMark</th>
                            <th scope="col" style="width: 150px">@Resource.WayToSum</th>
                            <th scope="col" style="width: 150px">@Resource.Point</th>
                            <th scope="col" style="width: 150px">@Resource.Action</th>
                        </tr>
                    </thead>
                    <tbody class="contain-tbody-custom">
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>