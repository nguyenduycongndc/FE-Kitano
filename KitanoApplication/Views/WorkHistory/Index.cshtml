@using RiskAssessment.Resource;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<Style>
    .classno{
        max-width: 50px !important
    }
</Style>
<div class="row page-titles mx-0" style="padding-bottom: 0px; ">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">@Resource.Home</a></li>
            <li class="breadcrumb-item"><a href="javascript:void(0)">@Resource.SystemManagement</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Lịch sử công tác</a></li>
        </ol>
    </div>
</div>
<div class="container-fluid">
    <div class="card" id="view">
        <div class="card-header bg-primary text-white" style=" font-size: 1rem; ">
            Lịch sử công tác
        </div>
        <div class="card-body card-custom">
            <form action="javascript:void(0)">
                <div style="padding: 15px 0px;">
                    <a href="javascript:void(0);" class="btn btn-info" data-toggle="collapse" data-target="#collapseSearch" aria-expanded="true" aria-controls="collapseSearch"><i class="fa fa-search" aria-hidden="true"></i>@Resource.SearchOption</a>
                </div>
                <div class="collapse " id="collapseSearch" style="margin-top:5px; margin-bottom:5px">
                    <div class="col-md-12" style=" flex-direction: row; display: inline-flex; justify-content: space-between; align-items: flex-start; width: 100%; ">
                        <div style="width:46%">
                            <div class="col-md-12 mb-3">
                                <div class="form-group row">
                                    <label class="col-form-label col-lg-4" for="filterUserName">
                                        @Resource.UserName
                                    </label>
                                    <div class="col-lg-8">
                                        <input type="text" class="form-control" id="filterUserName" name="filterUserName">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div style="width:46%">
                            <div class="col-md-12 mb-3">
                                <div class="form-group row">
                                    <label class="col-form-label col-lg-3" for="filterDeparment">
                                        @Resource.Facility
                                    </label>
                                    <div class="col-lg-9">
                                        <select class="form-control" id="filterDeparment" name="filterDeparment">
                                            <option value="-1">@Resource.SelectFacility</option>
                                            <option value="1">Phòng Kế Toán</option>
                                            <option value="2">Phòng IT</option>
                                            <option value="3">Phòng Marketing</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-12 row" style="display:flex; justify-content:center; ">
                        <div style="width: 100%; text-align: center; display: contents;">
                            <a href="javascript:void(0)" class="btn btn-info" onclick="onSearch()" style="display:flex; justify-content:center; min-width: 12%; ">Tìm kiếm</a>
                        </div>
                    </div>
                </div>
            </form>
            <div class="table-responsive custom-table-scroll">
                <table id="workhistorytable" class="table table-striped table-bordered zero-configuration">
                    <thead class="contain-header-custom m-gray ">
                        <tr>
                            <th class="text-center classno" scope="col" style="width:2%">STT</th>
                            <th class="text-center" scope="col" style="width:12%">@Resource.UserName</th>
                            <th class="text-center" scope="col" style="width:22%;">@Resource.FullName</th>
                            <th class="text-center" scope="col" style="width:15%">@Resource.Facility</th>
                            <th class="text-center" scope="col" style="width:25%">@Resource.DateOfJoining</th>
                        </tr>
                    </thead>
                    <tbody class="contain-tbody-custom">
                    </tbody>
                </table>
            </div>
            <div class="row">
                <div class="col-md-7"></div>
                <div class="col-md-5">
                    <partial name="_Pagination" />
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/jsApp/common.js" asp-append-version="true"></script>
    <script src="~/js/constant.js" asp-append-version="true"></script>
    <script src="~/js/jsApp/systemworkhistory.js" type="text/javascript" asp-append-version="true"></script>
    <script defer type="text/javascript">
        setTimeout(function () { getParents(); onSearch(); }, 400);
    </script>
}
