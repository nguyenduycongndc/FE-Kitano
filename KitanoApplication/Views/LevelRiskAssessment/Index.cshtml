@using RiskAssessment.Resource;
@{
    Layout = "_Layout";

}

<style>
    .row-custom {
        display: flex;
    }
</style>
<div class="row page-titles mx-0" style="padding-bottom: 0px; ">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">@Resource.Home</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">@Resource.LevelRiskAssessment</a></li>
        </ol>
    </div>
</div>
<div class="container-fluid">
    <div class="card" id="view">
        <div class="card-header bg-primary text-white" style=" font-size: 1rem; ">
            Danh sách cuộc kiểm toán
        </div>
        <div class="card-body card-custom">
            <form action="javascript:void(0)">
                <div style="padding: 15px 0px;">
                    <a href="javascript:void(0);" class="btn btn-info">Thêm rủi ro</a>
                    <a href="javascript:void(0);" class="btn btn-info" data-toggle="collapse" data-target="#collapseSearch" aria-expanded="true" aria-controls="collapseSearch"><i class="fa fa-search" aria-hidden="true"></i>@Resource.SearchOption</a>
                </div>
                <div class="collapse" id="collapseSearch" style="margin-top:5px">
                    <div class="col-md-12 row">
                        <div class="col-md-6 mb-3">
                            <div class="form-group row">
                                <label class="col-form-label col-lg-4" for="Year">
                                    Năm kiểm toán
                                </label>
                                <div class="col-lg-8">
                                    <select class="form-control selectpicker" id="Year">
                                        <option value="-1" selected="selected">--Chọn--</option>
                                        <option value="2021">2021</option>
                                        <option value="2020">2020</option>
                                        <option value="2019">2019</option>
                                        <option value="2018">2018</option>
                                        <option value="2017">2017</option>
                                        <option value="2016">2016</option>
                                        <option value="2015">2015</option>
                                        <option value="2014">2014</option>
                                        <option value="2013">2013</option>
                                        <option value="2012">2012</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="form-group row">
                                <label class="col-form-label col-lg-4" for="Classify">
                                    Đơn vị được KT
                                </label>
                                <div class="col-lg-8">
                                    <select class="form-control selectpicker" id="Classify">
                                        <option value="-1" selected="selected">--Chọn--</option>
                                        <option value="0">Phòng kế toán</option>
                                        <option value="1">Phòng mua sắm</option>
                                        <option value="1">Phòng kinh doanh</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 row">
                        <div class="col-md-6 mb-3">
                            <div class="form-group row">
                                <label class="col-form-label col-lg-4" for="Code">
                                    Cuộc kiểm toán
                                </label>
                                <div class="col-lg-8">
                                    <select class="form-control selectpicker" id="Classify">
                                        <option value="-1" selected="selected">--Chọn--</option>
                                        <option value="0">Kiểm toán quy trình bán hàng</option>
                                        <option value="1">Kiểm toán quy trình mua sắm</option>
                                        <option value="1">Kiểm toán quy trình thanh toán</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="form-group row">
                                <label class="col-form-label col-lg-4" for="Name">
                                    Quy trình được KT
                                </label>
                                <div class="col-lg-8">
                                    <select class="form-control selectpicker" id="Classify">
                                        <option value="-1" selected="selected">--Chọn--</option>
                                        <option value="0">Quy trình bán hàng</option>
                                        <option value="1">Quy trình tuyển dụng</option>
                                        <option value="1">Quy trình xác định giá</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 row">
                        <div class="col-md-6 mb-3">
                            <div class="form-group row">
                                <label class="col-form-label col-lg-4" for="Person">
                                    Rủi ro
                                </label>
                                <div class="col-lg-8">
                                    <select class="form-control selectpicker" id="Classify">
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 mb-3 btn-search-custom">
                        <div style="text-align:center; ">
                            <a href="javascript:void(0)" class="btn btn-info" onclick="onSearch()">@Resource.Search</a>
                        </div>
                    </div>
                </div>
            </form>
            <div class="table-responsive custom-table-scroll ">
                <table id="levelRiskAssessmentTable" class="table table-striped table-bordered zero-configuration">
                    <thead class="contain-header-custom m-gray">
                        <tr>
                            <th style="text-align: center; max-width: 2%">STT</th>
                            <th style="text-align: center">Quy trình</th>
                            <th style="text-align: center; max-width: 7%">Mã rủi ro</th>
                            <th style="text-align: center; max-width: 5%">Tên rủi ro</th>
                            <th style="text-align: center; max-width: 7%">Khả năng xảy ra</th>
                            <th style="text-align: center; max-width: 7%">Mức ảnh hưởng</th>
                            <th style="text-align: center; max-width: 7%">Tổng hợp điểm rủi ro</th>
                            <th style="text-align: center; max-width: 10%">Xếp hạng rủi ro</th>
                            <th style="text-align: center; max-width: 7%">Chương trình kiểm toán</th>
                            <th style="text-align: center; max-width: 7%">Rủi ro còn lạ</th>
                            <th style="text-align: center">Tác vụ</th>
                        </tr>
                    </thead>
                    <tbody class="contain-tbody-custom">
                    </tbody>
                </table>
            </div>
            <div class="row">
                <div class="col-md-7"></div>
                <div class="col-md-5">
                    <partial name="_Pagination" />
                </div>
            </div>
        </div>
    </div>

    <div class="card" id="modify" style="display: none">
        <div class="card-header bg-primary text-white" id="frmHeader" style=" font-size: 1rem; ">
            Chấm điểm rủi ro cấp độ quy trình
        </div>
        <div class="card-body card-custom">
            <form id="form-audit-work" class="form-valide" action="#" method="post" style="margin-top: 20px;">
                <input type="hidden" id="Id" name="Id" value="0" />
                <div class="row">
                    <div class="col-md-12 row-custom" style="margin-bottom:5px">
                        <h5>1. Thông tin về rủi ro</h5>
                    </div>
                    <div class="col-md-12 row-custom">
                        <div class="col-md-12 mb-3">
                            <div class="form-group row">
                                <label class="col-form-label col-lg-2">
                                    Quy trình được KT
                                </label>
                                <div class="col-lg-10">
                                    <input type="text" class="form-control" readonly value="Quy trình cho vay ">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">

                        </div>
                    </div>
                    <div class="col-md-12 row-custom">
                        <div class="col-md-12 mb-3">
                            <div class="form-group row">
                                <label class="col-form-label col-lg-2">
                                    Đơn vị được KT
                                </label>
                                <div class="col-lg-10">
                                    <input type="text" class="form-control" readonly value="Phòng cho vay">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 row-custom">
                        <div class="col-md-6 mb-3">
                            <div class="form-group row">
                                <label class="col-form-label col-lg-4">
                                    Mã rủi ro
                                </label>
                                <div class="col-lg-8">
                                    <input type="text" class="form-control" readonly value="RR.TD.0001">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 row-custom">
                        <div class="col-md-12 mb-3">
                            <div class="form-group row">
                                <label class="col-form-label col-lg-2" for="UserName">
                                    Tên rủi ro
                                </label>
                                <div class="col-lg-10">
                                    <input type="text" class="form-control" readonly value="Thẩm định sai giá trị tài sản bảo đảm">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 row-custom">
                        <div class="col-md-12 mb-3">
                            <div class="form-group row">
                                <label class="col-form-label col-lg-2" for="UserName">
                                    Mô tả rủi ro
                                </label>
                                <div class="col-lg-10">
                                    <input type="text" class="form-control" readonly value="Giá trị tài sản bảo đảm được xác định không chính xác">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 row-custom">
                        <div class="col-md-2 mb-3">
                            <div class="form-group row">
                                <label class="col-form-label col-lg-12">
                                    Kiểm soát hiện tại
                                </label>
                            </div>
                        </div>
                        <div class="col-md-10 mb-3">
                            <table id="renderTable" class="table table-striped table-bordered zero-configuration" style="width:100%; table-layout:fixed ">
                                <thead class="contain-header-custom m-gray ">
                                    <tr>
                                        <th class="text-center" scope="col" style="width:6%">STT</th>
                                        <th class="text-center" scope="col">Mã kiểm soát</th>
                                        <th class="text-center" scope="col" style="width:40%">Kiểm soát theo quy định</th>
                                        <th class="text-center" scope="col" style="width:18%">
                                            Tần suất kiểm soát
                                        </th>
                                        <th class="text-center" scope="col">Loại kiểm soát</th>
                                        <th class="text-center" scope="col">
                                            Hình thức kiểm soát
                                        </th>
                                    </tr>
                                </thead>
                                <tbody class="contain-tbody-custom">
                                    <tr>
                                        <td class="text-center">1</td>
                                        <td>KS.XDG.001</td>
                                        <td>Giá trị tài sản bảo đảm được một tổ chức thứ 3 có uy tín định giá</td>
                                        <td>Mỗi khi phát sinh</td>
                                        <td>Phòng ngừa</td>
                                        <td>Thủ công</td>
                                    </tr>
                                    <tr>
                                        <td class="text-center">2</td>
                                        <td>KS.XDG.001</td>
                                        <td>Kết quả đánh giá phải được một cán bộ chuyên trách cấp cao rà soát và phê duyệt</td>
                                        <td>Mỗi khi phát sinh</td>
                                        <td>Phòng ngừa</td>
                                        <td>Thủ công</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="col-md-12 row-custom">
                        <br />
                    </div>
                    <div class="col-md-12 row-custom" style="margin-bottom:5px">
                        <h5>2. Chấm điểm rủi ro tiềm tàng</h5>
                    </div>
                    <div class="col-md-12 row-custom">
                        <div class="col-md-6 mb-3">
                            <div class="form-group row">
                                <label class="col-form-label col-lg-4">
                                    Khả năng xảy ra <span class="text-danger">*</span>
                                </label>
                                <div class="col-lg-8">
                                    <select class="form-control">
                                        <option value="-1">— Chọn mức —</option>
                                        <option value="1">1 - Rất hiếm khi</option>
                                        <option value="2">2 - Thỉnh thoảng</option>
                                        <option value="3">3 - Thường xuyên</option>
                                        <option value="4">4 - Khá thường xuyên</option>
                                        <option value="5">5 - Rất thường xuyên</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="form-group row">
                                <label class="col-form-label col-lg-4">
                                    Ảnh hưởng <span class="text-danger">*</span>
                                </label>
                                <div class="col-lg-8">
                                    <select class="form-control">
                                        <option value="-1">— Chọn mức —</option>
                                        <option value="1">1 - Không đáng kể</option>
                                        <option value="2">2 - Nhỏ</option>
                                        <option value="3">3 - Vừa phải</option>
                                        <option value="4">4 - Nghiêm trọng</option>
                                        <option value="5">5 - Thảm hoạ</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 row-custom">
                        <div class="col-md-6 mb-3">
                            <div class="form-group row">
                                <label class="col-form-label col-lg-4">
                                    Xếp hạng rủi ro <span class="text-danger">*</span>
                                </label>
                                <div class="col-lg-8">
                                    <select class="form-control">
                                        <option value="-1">— Chọn mức —</option>
                                        <option value="1">Cao</option>
                                        <option value="2">Trung bình</option>
                                        <option value="3">Thấp</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 row-custom">
                        <div class="col-md-12 mb-3">
                            <div class="form-group row">
                                <label class="col-form-label col-lg-2">
                                    Lý do xếp hạng <span class="text-danger">*</span>
                                </label>
                                <div class="col-lg-10">
                                    <textarea class="form-control" rows="2"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 row-custom">
                        <div class="col-md-6 mb-3">
                            <div class="form-group row">

                                <label class="col-form-label" for="checkbox_id" style=" display: flex; flex-direction: row; justify-content: center; align-items: center; ">
                                    <input type="checkbox" name="checkbox" id="checkbox_id" value="value" style="margin-left: 17px;">&nbsp;
                                    <span>Đưa vào chương trình kiểm toán</span>
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 row-custom">
                        <br />
                    </div>
                    <div class="col-md-12 row-custom" style="margin-bottom:5px">
                        <h5>3. Chấm điểm rủi ro còn lại</h5>
                    </div>
                    <div class="col-md-12 row-custom">
                        <div class="col-md-6 mb-3">
                            <div class="form-group row">
                                <label class="col-form-label col-lg-4">
                                    Khả năng xảy ra
                                </label>
                                <div class="col-lg-8">
                                    <select class="form-control">
                                        <option value="-1">— Chọn mức —</option>
                                        <option value="1">1 - Rất hiếm khi</option>
                                        <option value="2">2 - Thỉnh thoảng</option>
                                        <option value="3">3 - Thường xuyên</option>
                                        <option value="4">4 - Khá thường xuyên</option>
                                        <option value="5">5 - Rất thường xuyên</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="form-group row">
                                <label class="col-form-label col-lg-4">
                                    Ảnh hưởng
                                </label>
                                <div class="col-lg-8">
                                    <select class="form-control">
                                        <option value="-1">— Chọn mức —</option>
                                        <option value="1">1 - Không đáng kể</option>
                                        <option value="2">2 - Nhỏ</option>
                                        <option value="3">3 - Vừa phải</option>
                                        <option value="4">4 - Nghiêm trọng</option>
                                        <option value="5">5 - Thảm hoạ</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 row-custom">
                        <div class="col-md-6 mb-3">
                            <div class="form-group row">
                                <label class="col-form-label col-lg-4">
                                    Xếp hạng rủi ro
                                </label>
                                <div class="col-lg-8">
                                    <select class="form-control">
                                        <option value="-1">— Chọn mức —</option>
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <option value="4">4</option>
                                        <option value="5">5</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 row-custom">
                        <div class="col-md-12 mb-3">
                            <div class="form-group row">
                                <label class="col-form-label col-lg-2">
                                    Lý do xếp hạng
                                </label>
                                <div class="col-lg-10">
                                    <textarea class="form-control" rows="2"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 row" style="display: inline-flex; flex-direction: row; justify-content: end; align-items: flex-start; width: 100%;">
                        <div style="width: 50%; display: inline-flex; flex-direction: row; justify-content: end; align-items: flex-start;">
                            <div style="width: 24%; display: inline-flex; flex-direction: row; justify-content: center; align-items: flex-start; padding: 0 5px 0 5px; ">
                                <button type="submit" class="btn btn-info" style="width:100%">@Resource.Save</button>
                            </div>
                            <div style="width: 24%; display: inline-flex; flex-direction: row; justify-content: center; align-items: flex-start; padding: 0 5px 0 5px; ">
                                <button type="button" class="btn btn-outline" style="width:100%" onclick="openView(0,0,'')">@Resource.Back</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/js/jsApp/common.js" asp-append-version="true"></script>
    <script src="~/js/constant.js" asp-append-version="true"></script>
    <script src="~/js/jsApp/levelRiskAssessment.js" type="text/javascript" asp-append-version="true"></script>
    <script type="text/javascript">
        $("#Year").select2();
        $("#Classify").select2();
        onSearch();
    </script>
}